        <attr name="gravity">
            <flag name="center" value="17" />
            <flag name="end" value="8388613" />
            <flag name="start" value="8388611" />
        </attr>
        <attr name="sumTextSize" format="dimension" />
        <attr name="signTextSize" format="dimension" />
        <attr name="sumTextColor" format="reference" />
        <attr name="marginBetweenSign" format="dimension" />
        <attr name="sumTextStyle" format="reference|integer" />
        <attr name="signTextStyle" format="reference|integer" />
        <attr name="signTextColor" format="reference" />
        <attr name="signCode" format="string" />
        <attr name="sum" format="string" />
        <attr name="prefixText" format="string" />
        <attr name="showUnderline" format="boolean" />
        <attr name="showSign" format="boolean" />
