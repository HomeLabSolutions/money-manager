<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/remove_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_large"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/padding_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Delete this transaction?" />

    <TextView
        android:id="@+id/remove_dialog_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_large"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/padding_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_title"
        tools:text="Do you really want to delete the transaction?" />

    <TextView
        android:id="@+id/remove_button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/remove_button_confirm"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_subtitle" />

    <TextView
        android:id="@+id/remove_button_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_subtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
