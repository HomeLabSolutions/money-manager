    <style name="Theme.Login" parent="Theme.MoneyManager" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/splash_screen_background</item>
        <item name="postSplashScreenTheme">@style/Theme.MoneyManager</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.AppBarLayout" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Toolbar.Inverted" parent="ThemeOverlay.MoneyManager.Toolbar">
        <item name="actionMenuTextColor">?attr/colorSecondary</item>
        <item name="colorSurface">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.MoneyManager.MaterialDialog.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
    </style>

    <style name="Theme.MoneyManager.MaterialDialog.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
