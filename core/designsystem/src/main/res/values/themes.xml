        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="boxStrokeColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColorHint">?attr/colorPrimaryContainer</item>
        <item name="hintTextColor">?attr/colorPrimaryContainer</item>
        <item name="counterTextColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorPrimaryContainer</item>
        <item name="android:theme">@style/textCursor</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/max_category_name_length</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="textCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.MoneyManager.BodySmall">
        <item name="android:textColor">?attr/colorError</item>
    </style>

