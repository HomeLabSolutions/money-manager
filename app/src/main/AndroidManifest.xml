<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.d9tilov.moneymanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:label="${appName}"
        android:icon="@mipmap/ic_launcher"
        android:restoreAnyVersion="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyManager">

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <activity
            android:name=".splash.ui.RouterActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".prepopulate.ui.PrepopulateActivity2"
            android:exported="false"
            android:theme="@style/Theme.MoneyManager"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".home.ui.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MoneyManager.Home"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="remove">
            <meta-data
                android:name="com.d9tilov.moneymanager.sync.initializers.SyncInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
    </application>

</manifest>
