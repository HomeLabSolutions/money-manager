<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/spinner_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="4dp">
        <layer-list>
            <item
                android:width="10dp"
                android:height="10dp"
                android:gravity="right"
                android:right="3dp"
                android:top="8dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/control_activated_color" />
                        <stroke
                            android:width="1dp"
                            android:color="@color/control_activated_color" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="32dp"
                android:height="12dp"
                android:bottom="20dp"
                android:gravity="right"
                android:left="64dp"
                android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/spinner_background" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
