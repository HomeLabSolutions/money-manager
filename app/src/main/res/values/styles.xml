<resources>

    <style name="Widget.MoneyManager.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="PlaidDarkOverlay" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <style name="Widget.MoneyManager.BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">?attr/colorPrimary</item>
        <item name="itemIconTint">@drawable/bottom_tab_selector</item>
        <item name="itemTextColor">@drawable/bottom_tab_selector</item>
        <item name="selectableItemBackground">?attr/colorSecondary</item>
    </style>

    <style name="Widget.MoneyManager.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextColor">@drawable/tabs_color_selector</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.MoneyManager.Tab</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

</resources>
