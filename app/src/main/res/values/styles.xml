<resources>

    <style name="Widget.MoneyManager.AppBarLayout" parent="">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.MoneyManager.AppBarLayoutMotion" parent="Widget.MoneyManager.AppBarLayout">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.MoneyManager.BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="itemIconTint">@drawable/bottom_tab_selector</item>
        <item name="itemTextColor">@drawable/bottom_tab_selector</item>
        <item name="selectableItemBackground">?attr/colorSecondary</item>
    </style>

    <style name="Widget.MoneyManager.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextColor">@drawable/tabs_color_selector</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.MoneyManager.Tab</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MoneyManager.Category.Title" parent="TextAppearance.MoneyManager.Caption">
        <item name="android:scrollHorizontally">false</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.MoneyManager.Category.Subtitle" parent="TextAppearance.MoneyManager.Overline">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.MoneyManager.Button.BottomAction" parent="Widget.AppCompat.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="iconPadding">-24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="iconTint">@drawable/button_icon_background</item>
    </style>

    <style name="Widget.MoneyManager.EditText.Description" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:background">@null</item>
    </style>

</resources>
