<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.V21.Theme.MoneyManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:actionBarStyle">@style/Widget.MoneyManager.AppBarLayout</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary_color</item>
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error_color</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MoneyManager.H1</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MoneyManager.H4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MoneyManager.H5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MoneyManager.H6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MoneyManager.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MoneyManager.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MoneyManager.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MoneyManager.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MoneyManager.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MoneyManager.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MoneyManager.Overline</item>
        <item name="appBarLayoutStyle">@style/Widget.MoneyManager.AppBarLayout</item>
        <item name="radioButtonStyle">@style/Widget.MoneyManager.RadioButton</item>
        <item name="bottomNavigationStyle">@style/Widget.MoneyManager.BottomNavigationStyle</item>
        <item name="tabStyle">@style/Widget.MoneyManager.TabLayout</item>
    </style>

    <style name="Base.Theme.MoneyManager" parent="Base.V21.Theme.MoneyManager" />

    <style name="Theme.MoneyManager" parent="Base.Theme.MoneyManager">

        <item name="textAppearanceCurrencySumExtraBig">
            @style/TextAppearance.MoneyManager.CurrencySum.ExtraBig
        </item>
        <item name="textAppearanceCurrencySignExtraBig">
            @style/TextAppearance.MoneyManager.CurrencySign.ExtraBig
        </item>
        <item name="textAppearanceCurrencySumBig">
            @style/TextAppearance.MoneyManager.CurrencySum.Big
        </item>
        <item name="textAppearanceCurrencySignBig">
            @style/TextAppearance.MoneyManager.CurrencySign.Big
        </item>
        <item name="textAppearanceCurrencySumMedium">
            @style/TextAppearance.MoneyManager.CurrencySum.Medium
        </item>
        <item name="textAppearanceCurrencySignMedium">
            @style/TextAppearance.MoneyManager.CurrencySign.Medium
        </item>
        <item name="textAppearanceCurrencySumSmall">
            @style/TextAppearance.MoneyManager.CurrencySum.Small
        </item>
        <item name="textAppearanceCurrencySignSmall">
            @style/TextAppearance.MoneyManager.CurrencySign.Small
        </item>
        <item name="textAppearanceCurrencySumExtraSmall">
            @style/TextAppearance.MoneyManager.CurrencySum.ExtraSmall
        </item>
        <item name="textAppearanceCurrencySignExtraSmall">
            @style/TextAppearance.MoneyManager.CurrencySign.ExtraSmall
        </item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Toolbar" parent="">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="Theme.MoneyManager.Home" parent="Theme.MoneyManager">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.MoneyManager.Prepopulate" parent="Theme.MoneyManager">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MoneyManager">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.AppBarLayout" parent="">
        <item name="colorPrimary">@color/color_midnight_white</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Toolbar.Inverted" parent="ThemeOverlay.MoneyManager.Toolbar">
        <item name="actionMenuTextColor">@color/secondary_color</item>
        <item name="colorSurface">?attr/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Surface.NeutralLight" parent="">
        <item name="colorSurface">@color/neutral_light_color</item>
    </style>

    <style name="Theme.MoneyManager.Material.Alert.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="background">@drawable/dialog_background</item>
        <item name="elevation">16dp</item>
    </style>

    <style name="Theme.MoneyManager.MaterialComponents.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.MoneyManager.MaterialComponents.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.MoneyManager.MaterialComponents.Button.Text" parent="">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/standard_padding</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="boxStrokeColor">@color/secondary_color</item>
        <item name="android:textColorHint">@color/secondary_color</item>
        <item name="hintTextColor">@color/secondary_color</item>
        <item name="counterTextColor">@color/secondary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:theme">@style/textCursor</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/max_category_name_length</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="textCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/control_activated_color</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.MoneyManager.Caption">
        <item name="android:textColor">@color/error_color</item>
    </style>

</resources>
