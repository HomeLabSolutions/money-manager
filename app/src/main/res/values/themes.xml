    <style name="ThemeOverlay.MoneyManager.Toolbar" parent="">
        <item name="android:textColorPrimary">@color/text_normal_color</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="Theme.MoneyManager.Home" parent="Theme.MoneyManager">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.MoneyManager.Prepopulate" parent="Theme.MoneyManager">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MoneyManager">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.AppBarLayout" parent="">
        <item name="colorPrimary">@color/color_midnight_white</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Toolbar.Inverted" parent="ThemeOverlay.MoneyManager.Toolbar">
        <item name="actionMenuTextColor">@color/secondary_color</item>
        <item name="colorSurface">@color/primary_dark_color</item>
    </style>

    <style name="ThemeOverlay.MoneyManager.Surface.NeutralLight" parent="">
        <item name="colorSurface">@color/neutral_light_color</item>
    </style>

    <style name="Theme.MoneyManager.Material.Alert.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/neutral_light_color</item>
        <item name="android:background">@color/primary_color</item>
        <item name="colorControlNormal">@color/control_normal_color</item>
        <item name="colorControlActivated">@color/control_activated_color</item>
        <item name="colorControlHighlight">@color/control_highlight_color</item>
    </style>

    <style name="Theme.MoneyManager.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/control_highlight_color</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/text_input_box_stroke</item>
        <item name="counterTextColor">@color/text_input_box_stroke</item>
        <item name="android:textColor">@color/color_midnight_white</item>
        <item name="android:theme">@style/textCursor</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/max_category_name_length</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="textCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/control_activated_color</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.MoneyManager.Caption">
        <item name="android:textColor">@color/accent_color</item>
    </style>

</resources>
