        <item name="checkboxStyle">@style/Widget.MoneyManager.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.MoneyManager.RadioButton</item>
        <item name="editTextStyle">@style/Widget.MoneyManager.EditText</item>
