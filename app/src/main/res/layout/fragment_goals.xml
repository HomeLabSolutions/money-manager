<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/goals_toolbar_container"
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/edit_transaction_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goals_main_sum_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_left_margin"
                android:layout_marginTop="16dp"
                android:text="@string/goals_accumulated"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="@color/text_primary_color_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.d9tilov.moneymanager.core.ui.widget.currencyview.CurrencyView
                android:id="@+id/goals_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/standard_right_margin"
                android:theme="@style/ThemeOverlay.MoneyManager.CurrencyView.Big"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/goals_main_sum_title"
                app:layout_constraintTop_toBottomOf="@+id/goals_main_sum_title"
                app:scaleEnabled="true"
                app:sum="5000" />

            <TextView
                android:id="@+id/goals_sum_per_period_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/goals_sum_per_period_title"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/tertiary_color"
                app:layout_constraintStart_toStartOf="@+id/goals_main_sum_title"
                app:layout_constraintTop_toBottomOf="@+id/goals_amount" />

            <com.d9tilov.moneymanager.core.ui.widget.currencyview.CurrencyView
                android:id="@+id/goals_sum_per_period"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/standard_right_margin"
                android:theme="@style/ThemeOverlay.MoneyManager.Goals.Medium"
                app:enableInput="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/goals_sum_per_period_title"
                app:layout_constraintTop_toBottomOf="@+id/goals_sum_per_period_title"
                app:scaleEnabled="true"
                app:signTextStyle="?attr/textAppearanceGoalSignMedium"
                app:sum="300"
                app:sumTextStyle="?attr/textAppearanceGoalValueMedium" />

            <ImageView
                android:id="@+id/goals_delimiter"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layerType="software"
                android:src="@drawable/dotted_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goals_sum_per_period" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goals_rv_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goals_delimiter"
                tools:listitem="@layout/item_goal"
                tools:visibility="visible" />

            <ViewStub
                android:id="@+id/goals_empty_placeholder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:inflatedId="@+id/inflate"
                android:layout="@layout/layout_empty_list_goals_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goals_delimiter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goals_save"
        style="?attr/moneyManagerBottomActionButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
