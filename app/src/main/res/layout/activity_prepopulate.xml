<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/prepopulate_nav_host_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/prepopulate_next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/prepopulate_navigation" />

    <TextView
        android:id="@+id/prepopulate_progress_title"
        style="?attr/textAppearanceBodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/prepopulate_progress"
        app:layout_constraintEnd_toEndOf="@+id/prepopulate_progress"
        tools:text="3/5" />

    <com.d9tilov.moneymanager.core.ui.widget.progress.ProgressLine
        android:id="@+id/prepopulate_progress"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="@dimen/standard_large_padding"
        android:layout_marginEnd="@dimen/standard_large_padding"
        app:layout_constraintBottom_toBottomOf="@+id/prepopulate_next_btn"
        app:lineBarWidth="4dp"
        app:layout_constraintEnd_toStartOf="@+id/prepopulate_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:lineProgressColor="?attr/colorPrimaryContainer"
        app:underLineColor="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/prepopulate_back_btn"
        android:layout_width="@dimen/button_prepopulate_height"
        android:layout_height="@dimen/button_prepopulate_height"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_rectangle_border_selector"
        android:src="@drawable/background_arrow_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/prepopulate_next_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/prepopulate_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_prepopulate_height"
        android:layout_marginEnd="@dimen/standard_large_padding"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_rectangle_border_selector"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/next"
        android:textColor="@drawable/button_background_prepopulate_text_color_state_selector"
        android:textSize="12sp"
        app:drawableTint="@drawable/button_background_prepopulate_text_color_state_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
