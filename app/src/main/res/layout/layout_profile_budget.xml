<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/profile_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/profile_item_budget_title"
        style="@style/Widget.MoneyManager.TextView.ProfileItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawablePadding="@dimen/padding_medium"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_budget_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/profile_item_budget_title" />

    <com.d9tilov.android.common_android.ui.widget.currencyview.CurrencyView
        android:id="@+id/profile_item_budget_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_item_budget_title"
        app:layout_constraintTop_toTopOf="parent"
        app:showDecimalPart="true"
        app:signTextStyle="?attr/textAppearanceCurrencySignSmall"
        app:sumTextSize="@dimen/profile_item_text_size"
        app:signTextSize="@dimen/overline_text_size"
        app:sumTextStyle="?attr/textAppearanceCurrencySumSmall"
        app:sumTextColor="?attr/colorSecondary"
        app:signTextColor="?attr/colorSecondary"
        tools:sumText="15000" />

    <TextView
        android:id="@+id/profile_item_budget_created_date"
        style="@style/Widget.MoneyManager.TextView.ProfileItem.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/budget_date_created"
        android:textSize="@dimen/budget_created_date"
        android:layout_marginStart="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_budget_value" />

    <View
        android:id="@+id/profile_budget_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rv_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
