<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/profile_item_height"
    android:id="@+id/profile_currency_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/profile_item_currency_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MoneyManager.TextView.ProfileItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/standard_half_right_margin"
        android:paddingStart="@dimen/standard_left_margin"
        android:paddingEnd="0dp"
        app:drawableStartCompat="@drawable/ic_currency_icon"
        android:text="@string/profile_item_currency_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_item_current_currency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/profile_item_currency_title"
        app:layout_constraintStart_toEndOf="@+id/profile_item_currency_title"
        app:layout_constraintTop_toTopOf="@+id/profile_item_currency_title"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_item_current_currency_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="icon" />

        <TextView
            android:id="@+id/profile_item_current_currency_sign"
            style="@style/Widget.MoneyManager.TextView.ProfileItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="@string/usd_sign" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/profile_currency_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/button_normal_color_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
