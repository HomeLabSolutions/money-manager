<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_item_height"
    android:gravity="center|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_item_currency_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_currency_icon" />

    <TextView
        android:id="@+id/profile_item_currency_title"
        style="@style/Widget.MoneyManager.TextView.ProfileItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/profile_item_currency_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_item_current_currency_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_item_current_currency_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="icon" />

        <TextView
            android:id="@+id/profile_item_current_currency_sign"
            style="@style/Widget.MoneyManager.TextView.ProfileItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="@string/usd_sign" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
