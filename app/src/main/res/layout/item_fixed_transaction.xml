<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.d9tilov.moneymanager.core.ui.widget.currencyview.CurrencyView
        android:id="@+id/item_fixed_transaction_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_left_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/standard_right_margin"
        android:theme="@style/ThemeOverlay.MoneyManager.CurrencyView.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:signTextStyle="?attr/textAppearanceCurrencySignSmall"
        app:sumTextStyle="?attr/textAppearanceSubtitle1"
        tools:sumText="15000" />

    <ImageView
        android:id="@+id/item_fixed_transaction_icon"
        android:layout_width="@dimen/category_item_icon_size"
        android:layout_height="@dimen/category_item_icon_size"
        android:layout_marginStart="@dimen/standard_left_margin"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fixed_transaction_sum"
        app:layout_goneMarginStart="@dimen/standard_left_margin"
        tools:src="@drawable/ic_category_expense_cafe" />

    <TextView
        android:id="@+id/item_fixed_transaction_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_half_left_margin"
        android:layout_marginEnd="@dimen/standard_right_margin"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="@+id/item_fixed_transaction_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_fixed_transaction_icon"
        app:layout_constraintTop_toTopOf="@+id/item_fixed_transaction_icon"
        tools:text="Cafe" />

    <TextView
        android:id="@+id/item_fixed_transaction_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_left_margin"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/item_fixed_transaction_notify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_fixed_transaction_category_name"
        tools:text="Every 20th day of the month" />

    <CheckBox
        android:id="@+id/item_fixed_transaction_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_right_margin"
        android:text="@string/fixed_transaction_notify"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_fixed_transaction_date"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
