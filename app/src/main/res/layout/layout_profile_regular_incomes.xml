<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="@dimen/profile_item_height"
    android:id="@+id/profile_regular_incomes_layout">

    <TextView
        android:id="@+id/profile_item_regular_income_title"
        style="@style/Widget.MoneyManager.TextView.ProfileItem"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawablePadding="@dimen/standard_half_right_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/standard_left_margin"
        android:paddingEnd="@dimen/standard_right_margin"
        app:drawableStartCompat="@drawable/ic_regular_income"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/profile_item_regular_incomes_title" />

    <TextView
        android:id="@+id/profile_item_regular_income_subtitle"
        style="@style/Widget.MoneyManager.TextView.ProfileItem.Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_right_margin"
        android:layout_marginStart="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_regular_income_title"
        tools:text="@string/profile_item_regular_incomes_title" />

    <View
        android:id="@+id/profile_regular_income_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rv_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
