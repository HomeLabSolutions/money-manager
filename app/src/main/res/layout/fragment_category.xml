<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_parent_view">

    <include
        android:id="@+id/category_toolbar_container"
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/standard_top_margin"
        android:layout_marginStart="@dimen/standard_half_left_margin"
        android:layout_marginEnd="@dimen/standard_half_right_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/standard_bottom_margin"
        app:layout_constraintBottom_toTopOf="@+id/category_group_edit"
        android:paddingBottom="@dimen/standard_bottom_margin"
        app:layout_constraintTop_toBottomOf="@+id/category_toolbar_container" />

    <TextView
        android:id="@+id/category_group_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:text="@string/edit"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorSecondary"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/category_group_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/category_group_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:padding="8dp"
        android:text="@string/delete"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/category_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category_create"
        style="?attr/moneyManagerBottomActionButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ViewStub
        android:id="@+id/category_empty_placeholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inflatedId="@+id/inflate"
        android:layout="@layout/layout_empty_list_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_toolbar_container"
        app:layout_constraintBottom_toTopOf="@+id/category_create"/>

</androidx.constraintlayout.widget.ConstraintLayout>
