<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.d9tilov.moneymanager.home.ui.MainActivity">

    <TextView
        android:id="@+id/daily_sum_to_spend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_left_margin"
        android:layout_marginTop="8dp"
        android:text="@string/expense_daily_sum_to_spend_title"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/control_activated_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_spent_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/expense_daily_spent_sum"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/control_activated_color"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/daily_sum_to_spend"
        app:layout_constraintTop_toBottomOf="@+id/daily_sum_to_spend" />

    <TextView
        android:id="@+id/monthly_spent_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/expense_monthly_spent_sum"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/control_activated_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/daily_spent_sum"
        app:layout_constraintTop_toBottomOf="@+id/daily_spent_sum" />


</androidx.constraintlayout.widget.ConstraintLayout>
