<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        style="@style/Theme.MoneyManager.MaterialDialog.Title.Text"
        android:id="@+id/remove_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard_half_left_margin"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/standard_right_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/transaction_delete_dialog_title" />

    <TextView
        style="@style/Theme.MoneyManager.MaterialDialog.Body.Text"
        android:id="@+id/remove_dialog_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard_half_left_margin"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/standard_right_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_title"
        tools:text="@string/transaction_delete_dialog_subtitle" />

    <TextView
        style="@style/Theme.MoneyManager.MaterialDialog.Button.Text"
        android:id="@+id/remove_button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/remove_button_confirm"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_subtitle" />

    <TextView
        style="@style/Theme.MoneyManager.MaterialDialog.Button.Text"
        android:id="@+id/remove_button_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_dialog_subtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
